---

interface Props {
	id: string;
	title: string;
	description: string;
	image?: string;
}

const { id, image, title, description } = Astro.props;
---
<a href={`/projects/${id}/`}>
    <img
        width={720}
        height={360}
        src={image}
        alt=""
        style={{ marginBottom: "1rem" }}
    />
    <div style={{ color: "rgb(var(--gray-light))" }}>
        <h4 class="title">{title}</h4>
        <p>{description}</p>
    </div>
</a>